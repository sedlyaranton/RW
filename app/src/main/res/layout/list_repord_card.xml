<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/report_cart_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_gravity="right"
        android:text="test"/>

    <TextView
        android:id="@+id/report_cart_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal|bold"
        android:text="test"/>

    <TextView
        android:id="@+id/report_card_clok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/report_cart_data"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal|bold"
        android:text="test"/>

    <TextView
        android:id="@+id/report_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/report_card_clok"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="normal|bold"
        android:text="test"/>




</LinearLayout>